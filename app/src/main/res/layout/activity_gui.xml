<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/red"
    tools:context=".GUI">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red">

            <ImageView
                android:id="@+id/userIMG"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_below="@id/userIMG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <androidx.cardview.widget.CardView
                    android:layout_marginRight="130dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardMaxElevation="12dp"
                    app:cardPreventCornerOverlap="true" >
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Log in"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:background="@color/purpleNew"
                        android:layout_gravity="center_horizontal" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginLeft="160dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_below="@id/cardView"
                android:id="@+id/relativeLay"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_marginLeft="60dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/twitter"

                    />
                <ImageButton
                    android:layout_alignLeft="@id/twitter"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="75dp"
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/facebook"
                    />
                <ImageButton
                    android:layout_alignLeft="@id/facebook"
                    android:layout_marginLeft="70dp"
                    android:id="@+id/googlePlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/googleplus"
                    />
            </RelativeLayout>


            <TextView
                android:layout_below="@id/relativeLay"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:id="@+id/tv1"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textSize="15dp"/>
            <TextView
                android:layout_below="@id/tv1"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:id="@+id/tv2"
                android:textColor="@color/purpleNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User name / Email address"
                android:textSize="15dp"/>
            <EditText
                android:layout_below="@id/tv1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:text="vkpanday789@gmail.com"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:id="@+id/EditTxt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_below="@id/EditTxt1"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/purpleNew"
                android:id="@+id/TV3"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password" />
            <EditText
                android:layout_below="@id/TV3"
                android:layout_alignParentLeft="true"
                android:text="12345"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:id="@+id/Edittext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebPassword"
                android:layout_gravity="center_horizontal" />
            <CheckBox
                android:layout_below="@id/Edittext2"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:id="@+id/checkbox"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me" />
            <androidx.cardview.widget.CardView
                android:layout_below="@id/checkbox"
                android:layout_alignParentLeft="true"
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DONE"
                    android:textSize="20dp"
                    android:background="@color/purpleNew"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:drawableRight="@drawable/arrowforward"
                    android:layout_gravity="center_horizontal" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@id/cardView2"
                android:layout_centerInParent="true"
                android:id="@+id/textView4"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget Password ?" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>





</RelativeLayout>